@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>
<table class=" table table-bordered table-strip" style="width:100%">

    <div class="container p-3">
        <div class="row     pt-4">
            <div class="col-6">
            <h2 class ="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <i class="bi-plus-circle">&nbsp;</i>
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                     Create New Category
                </a>
                <a asp-controller="Category" asp-action="ClearAll" class=" btn btn-secondary">Clear All Users</a>
            </div>     
        </div>
        <br />
    </div>
    <thead >
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Order
            </th>
            <th>
                Date
            </th>
            <th>Edit / Delete</th>
        </tr>
    </thead>
    <tbody >
        @foreach (var item in Model)
        {
  <thead >
        <td width="8%">
                @item.ID
            </td>

        <td width="10%">
                @item.Name
            </td>

        <td width="8%">
                @item.DisplayOrder
            </td>

        <td width="10%">
                @item.CreatedDate
            </td>
        <td width=2%>
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Category" asp-action="edit" asp-route-Id="@item.ID">Edit</a>
                <i>&nbsp; / &nbsp;</i>
                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.ID">Delete</a>
            </div>
            </td>
</thead>
        }
    </tbody>


</table>


